#15 Implement a code to find and remove duplicates from a list while preserving the original order of
#elements
def remove_duplicates(lst):
    nex = set()
    result = []
    for item in lst:
        if item not in nex:
            nex.add(item)
            result.append(item)
    return result

lst = [1, 2, 2, 3, 4, 4, 5, 1]
print(remove_duplicates(lst))  

